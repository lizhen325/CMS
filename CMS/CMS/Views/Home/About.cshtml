    ViewBag.Title = "About";
}
<div class="container">
    <div class="row">
        <div class="col-sm-offset-1 col-sm-10 col-sm-offset-1 head-shadow">
            <div class="employee-name">
                <span>One Dak Hanmari Korean BBQ</span>
